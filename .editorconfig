# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
max_line_length          = 80

# Matches multiple files with brace expansion notation
# Set default charset
[*.{tf,yaml,yml,rb}]
charset      = utf-8
indent_style = space
indent_size  = 2

[COMMIT_EDITMSG]
max_line_length = 0
